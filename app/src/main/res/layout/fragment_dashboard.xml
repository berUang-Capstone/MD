<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_background"
    android:padding="16dp">

    <TextView
        android:id="@+id/text_history"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="start|center_vertical"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:text="History"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/Search_by_All"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:drawableEnd="@drawable/forward"
        android:drawableRight="@drawable/forward"
        android:drawablePadding="8dp"
        android:gravity="start|center_vertical"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:text="Search All Transaction"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_history" />

    <View
        android:id="@+id/divider1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E0E0E0"
        app:layout_constraintTop_toBottomOf="@id/Search_by_All" />

    <TextView
        android:id="@+id/Search_by_Date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:drawableEnd="@drawable/forward"
        android:drawableRight="@drawable/forward"
        android:drawablePadding="8dp"
        android:gravity="start|center_vertical"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:text="Search By Date"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/divider1" />

    <View
        android:id="@+id/divider2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E0E0E0"
        app:layout_constraintTop_toBottomOf="@id/Search_by_Date" />

    <TextView
        android:id="@+id/Search_by_Type"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:drawableEnd="@drawable/forward"
        android:drawableRight="@drawable/forward"
        android:drawablePadding="8dp"
        android:gravity="start|center_vertical"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:text="Search By Type"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/divider2" />

    <View
        android:id="@+id/divider3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E0E0E0"
        app:layout_constraintTop_toBottomOf="@id/Search_by_Type" />

    <TextView
        android:id="@+id/Search_by_Category"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:drawableEnd="@drawable/forward"
        android:drawableRight="@drawable/forward"
        android:drawablePadding="8dp"
        android:gravity="start|center_vertical"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:text="Search By Category"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/divider3" />

</androidx.constraintlayout.widget.ConstraintLayout>
